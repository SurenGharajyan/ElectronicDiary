<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.me.reactiveapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/diarybook"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/diarybook"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activty.LogoActivity"
            android:label="Electronic Diary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activty.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >

        </activity>
        <activity
            android:name=".activty.Main2Activity"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >

        </activity>
        <activity
            android:name=".activty.MemoriesDayActivity"
            android:label="Remember Days">

        </activity>
    </application>

</manifest>